
<style type="text/css">
.report{
	width: 600px;
	margin: 0 auto;
	background-color: #f0f6f6; 
	font-size: 17px;
}

.reportHeader, .boardHeader { 
	font-weight: bold;
	font-size: 25px;
	padding: 5px;
}

.reportBoards {
	background-color: #c0c0c0; 
	width: 550px;
	margin: 0 auto;
	padding: 10px;
}

.reportBoard {
	margin: 7px 2px;
	border-bottom: 1px solid #e5e5e5;
}

.reportCards {
	padding: 5px 7px;
}

.reportCard {
	padding: 5px 0px;
	border-bottom: 1px solid #e5e5e5;
}

.cardTitle a {
	color: #fff;
	font-size: 15px;
}

.cardDesc{
	font-size: 12px;
	padding: 0px 5px; 
}
</style>  

<div class="report">
	<div class="reportHeader">{{reportName}}</div>

	<div class="reportBoards">
	{{#each boards}}
		<div class="reportBoard">
			<div boardHeader>{{this.name}}</div>
			<div class="reportCards">
				{{#each this.cards}}
				<div class="reportCard">
					<div class="cardTitle"><a href="{{this.shortUrl}}">{{this.name}}</a></div>
					<div class="cardDesc">{{this.desc}}</div>
				</div>
				{{/each}}
			</div>
		</div>
	{{/each}}
	</div>
</div>